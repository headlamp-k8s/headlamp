{
  "name": "headlamp",
  "version": "0.7.0",
  "description": "",
  "main": "electron/main.js",
  "homepage": ".",
  "productName": "Headlamp",
  "scripts": {
    "compile-electron": "babel electron --out-dir electron/ --extensions .ts",
    "start": "cd ../ && make backend && make run-backend  & cd ../frontend/ && export BROWSER=none && npm start",
    "prod-deps": "mkdirp prod_deps && cd ./prod_deps && cp ../package.json ../package-lock.json . && npm i --only=prod && rm -rf ./node_modules/.bin",
    "copy-icons": "mkdirp build/icons && cp ../frontend/build/*.png ../frontend/build/*.ico ../frontend/build/*.icns ../frontend/build/*.svg build/icons",
    "build": "npm run copy-icons && npm run copy-plugins && npm run compile-electron && npm run prod-deps && electron-builder --dir --publish never",
    "package": "npm run copy-icons && npm run copy-plugins && npm run compile-electron && electron-builder build --publish never",
    "dev": "npm run compile-electron && cross-env ELECTRON_DEV=1 electron .",
    "dev-only-app": "npm run compile-electron && cross-env ELECTRON_DEV=1 ELECTRON_START_URL=http://localhost:3000 EXTERNAL_SERVER=true electron .",
    "i18n": "npx --no-install i18next ./electron/main.ts -c ./electron/i18next-parser.config.js",
    "test": "jest",
    "copy-plugins": "rm -rf build/.plugins && mkdirp build/.plugins && copyfiles ../.plugins build/.plugins"
  },
  "build": {
    "appId": "com.kinvolk.headlamp",
    "beforeBuild": "./scripts/build-backend.js",
    "afterPack": "./scripts/after-pack.js",
    "afterSign": "mac/scripts/notarize.js",
    "asar": false,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        }
      ],
      "executableName": "headlamp",
      "maintainer": "Kinvolk <hello@kinvolk.io>",
      "category": "Network",
      "extraResources": [
        {
          "from": "../backend/server"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "mac/entitlements.mac.plist",
      "entitlementsInherit": "mac/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "../backend/server"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "extraResources": [
        {
          "from": "../backend/server.exe"
        }
      ]
    },
    "files": [
      "electron/main.js",
      "electron/preload.js",
      "electron/locales/",
      "electron/i18next.config.js",
      "electron/i18n-helper.js",
      "electron/windowSize.js"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "frontend"
      },
      {
        "from": "../.plugins",
        "to": ".plugins"
      }
    ],
    "publish": {
      "provider": "github",
      "repo": "headlamp",
      "owner": "kinvolk"
    },
    "extends": null
  },
  "keywords": [],
  "author": {
    "name": "Kinvolk",
    "email": "hello@kinvolk.io"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "electron": "^12.2.1",
    "electron-builder": "^22.14.5",
    "electron-notarize": "^1.1.1",
    "fs-extra": "^8.1.0",
    "i18next-parser": "^5.0.0",
    "jest": "^27.4.7",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@types/semver": "^7.3.8",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron-log": "^4.4.1",
    "i18next": "^20.6.1",
    "i18next-node-fs-backend": "^2.1.3",
    "mkdirp": "^1.0.4",
    "open": "^7.4.2",
    "yargs": "^16.2.0"
  }
}
