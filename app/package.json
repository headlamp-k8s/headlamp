{
  "name": "headlamp",
  "version": "0.2.1",
  "description": "",
  "main": "electron/main.js",
  "homepage": ".",
  "productName": "Headlamp",
  "scripts": {
    "compile-electron": "babel electron --out-dir electron/ --extensions '.ts'",
    "start": "cd ../ && make backend && make run-backend  & cd ../frontend/ && export BROWSER=none && npm start",
    "prod-deps": "mkdir -p prod_deps && cd ./prod_deps && cp ../package.json ../package-lock.json . && npm i --only=prod && rm -rf ./node_modules/.bin",
    "build": "npm run compile-electron && npm run prod-deps && electron-builder --dir --publish never",
    "package": "npm run compile-electron && electron-builder build --publish never",
    "serve-dev": "npm run compile-electron && export ELECTRON_DEV=1 && export ELECTRON_START_URL=http://localhost:3000 && electron ."
  },
  "build": {
    "appId": "com.kinvolk.headlamp",
    "beforeBuild": "./scripts/build-backend.js",
    "afterPack": "./scripts/after-pack.js",
    "afterSign": "mac/scripts/notarize.js",
    "asar": false,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "executableName": "headlamp",
      "maintainer": "Kinvolk <hello@kinvolk.io>",
      "category": "Network",
      "extraResources": [
        {
          "from": "../backend/server"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "pkg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "mac/entitlements.mac.plist",
      "entitlementsInherit": "mac/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "../backend/server"
        }
      ]
    },
    "win": {
      "target": [
        "zip",
        "msi",
        "nsis"
      ],
      "extraResources": [
        {
          "from": "../backend/server.exe"
        }
      ]
    },
    "files": [
      "electron/main.js"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "frontend"
      }
    ],
    "publish": {
      "provider": "github",
      "repo": "headlamp",
      "owner": "kinvolk"
    },
    "extends": null
  },
  "keywords": [],
  "author": {
    "name": "Kinvolk",
    "email": "hello@kinvolk.io"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "electron-notarize": "^1.0.0",
    "fs-extra": "^8.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.5",
    "open": "^7.3.1",
    "yargs": "^16.2.0"
  }
}
